<Window x:Class="TaskOrganiser.Views.AddTDLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskOrganiser.Views"
        mc:Ignorable="d"
        Title="Add TDL" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="TDL Name:"/>
            <TextBox x:Name="TDLNameTextBox" Margin="5"/>
            <Label Content="Image:"/>
            <ComboBox x:Name="ImageComboBox" Margin="5">
                <ComboBoxItem Content="Home" Tag="/Views/Home.png"/>
                <ComboBoxItem Content="Nature" Tag="/Views/Nature.png"/>
                <ComboBoxItem Content="Shopping" Tag="/Views/Shopping.png"/>
            </ComboBox>
            <Button Content="Add" Click="AddButton_Click" Width="100" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
